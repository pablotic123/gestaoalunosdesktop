  "instructions_to_main_agent": {
    "setup": [
      "Install dependencies: `npm install lucide-react recharts date-fns react-day-picker clsx tailwind-merge`",
      "Update `tailwind.config.js` with the provided font families and colors.",
      "Update `index.css` with the provided CSS variables.",
      "Ensure all interactive elements have `data-testid` attributes."
    ],
    "implementation_rules": [
      "Use `lucide-react` for all icons.",
      "Use `recharts` for the dashboard charts.",
      "Implement the 'Bento Grid' layout for the dashboard home.",
      "Use the 'Card' component for the Student Photo Grid (Mural).",
      "Ensure the sidebar is collapsible on mobile (Sheet component).",
      "Use `sonner` for toast notifications.",
      "Do NOT use gradients for backgrounds; use solid colors or subtle patterns.",
      "Ensure high contrast for text readability (WCAG AA)."
    ],
    "universal_guidelines": [
      "Don't make generic centered layouts.",
      "Create depth through layered design elements.",
      "Use 2-3x more spacing than feels comfortable.",
      "Every interaction needs micro-animations."
    ]
  }
