{
  "appId": "com.sge.desktop",
  "productName": "SGE - Sistema de Gest√£o Escolar",
  "directories": {
    "output": "dist",
    "buildResources": "electron/icons"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "../backend",
      "to": "backend",
      "filter": [
        "**/*",
        "!**/__pycache__/**",
        "!**/*.pyc",
        "!**/venv/**",
        "!**/.env"
      ]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/icons/icon.ico",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "electron/icons/icon.ico",
    "uninstallerIcon": "electron/icons/icon.ico",
    "installerHeaderIcon": "electron/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "SGE",
    "license": "../LICENSE",
    "installerLanguages": ["pt_BR", "en_US"]
  },
  "mac": {
    "target": ["dmg"],
    "icon": "electron/icons/icon.icns",
    "category": "public.app-category.education"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "electron/icons",
    "category": "Education"
  }
}
